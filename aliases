###########
# ALIASES #
###########

# Unix

alias ls="ls -FGh"
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias cp="cp -iv"
alias rm="rm -iv"
alias du="du -cksh"
alias df="df -h"
alias sed="sed -E"

# Global aliases
alias -g G="| grep"
alias -g ONE="| awk '( print \$1)'"

# Bundler
alias b="bundle"
alias be="bundle exec"

# RSpec
alias ber="bundle exec rspec"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Mix
alias mxt="mix test"
alias mxf="mix format"
alias mxs="mix phx.server"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'
